<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainActivity_BG"
    android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white_color" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/sizeLow"
            android:background="@color/white_color" />

        <ImageView

            android:id="@+id/profile_image_detail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/sizeNormal"
            android:src="@drawable/img5"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Name"
            android:textColor="@color/white_color"
            android:textSize="@dimen/textSizeHigh"
            android:textStyle="bold"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/sizeNormal"

            android:text="Profession"
            android:textColor="@color/white_color"
            android:textSize="@dimen/textSizeHigh"
            android:textStyle="bold"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white_color" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/sizeLow"
            android:background="@color/white_color" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="@dimen/sizeLow"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="100"
                android:textColor="@color/white_color"
                android:textSize="@dimen/textSizeNormal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Comments"
                android:layout_marginTop="@dimen/sizeLow"
                android:textColor="@color/white_color"
                android:textSize="@dimen/textSizeNormal"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/sizeLow"
            android:background="@color/white_color" />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="@dimen/sizeLow"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="100"
                android:textColor="@color/white_color"
                android:textSize="@dimen/textSizeNormal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Attempts"
                android:layout_marginTop="@dimen/sizeLow"
                android:textColor="@color/white_color"
                android:textSize="@dimen/textSizeNormal"
                android:textStyle="bold" />

        </LinearLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/sizeLow"
            android:background="@color/white_color" />
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="@dimen/sizeLow"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="100"
                android:textColor="@color/white_color"
                android:textSize="@dimen/textSizeNormal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Notification"
                android:layout_marginTop="@dimen/sizeLow"
                android:textColor="@color/white_color"
                android:textSize="@dimen/textSizeNormal"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/sizeLow"
        android:background="@color/white_color" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleview_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".8"
        />
    <Button
        android:id="@+id/btn_hireme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sizeLow"
        android:layout_marginTop="@dimen/sizeLow"
        android:background="@drawable/button_shape"
        android:padding="@dimen/sizeLow"
        android:text="Hire Me"
        android:textColor="@color/white_color"
        android:textSize="@dimen/textSizeHigh"
        android:textStyle="italic|bold"
        />
</LinearLayout>



